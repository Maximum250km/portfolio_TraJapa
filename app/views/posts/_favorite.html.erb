<% if post.favorited_by?(current_user) %>
<div class=" uk-margin-right uk-text-right">
<%= link_to post_favorites_path(post), method: :delete, remote: true do %>
<span uk-icon="icon: happy"></span>  	<% end %>
<%= post.favorites.count %> People upvoted!
<br>
<p class="uk-margin-small-top">
Posted at <%= post.created_at.strftime('%Y/%m/%d') %>
</p>
</div>
<% else %>
<div class=" uk-margin-right uk-text-right">
<%= link_to post_favorites_path(post), method: :post, remote: true do %>
<i class=" fas fa-thumbs-up"></i>		<% end %>
<%= post.favorites.count %> People upvoted!
<br>
<p class="uk-margin-small-top">
  Posted at <%= post.created_at.strftime('%Y/%m/%d') %>
</p>
</div>
<% end %>