<% if post.favorited_by?(current_user) %>
  <%= link_to "I dislike", post_favorites_path(post), method: :delete, remote: true  %>
	<%= post.favorites.count %> favorites
<% else %>
	<%= link_to "I like", post_favorites_path(post), method: :post, remote: true %>
	<%= post.favorites.count %> favorites
<% end %>