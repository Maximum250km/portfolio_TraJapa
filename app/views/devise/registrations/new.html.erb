<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
<div class="uk-container uk-width-large uk-background-muted uk-margin-medium">
  <div class="uk-align-center ">
    <fieldset class="uk-fieldset ">
      <legend class="uk-legend uk-text-center uk-text-primary">Enter your profile</legend>
      <div class="field">
        <%= f.label :account_name, class: "uk-label" %>
        <%= f.text_field :account_name, class: "uk-input" %>
      </div>
      <div class="field">
        <%= f.label :nationality, class: "uk-label" %><br />
        <%= f.text_field :nationality, id:"country"%>
        <script src="/assets/countrySelect.min.js"></script>
          <script>
            $("#country").countrySelect();
          </script>
      </div>
      <div class="field">
        <%= f.label :image, class: "uk-label" %>
        <%= f.attachment_field :profile_image  %>
      </div>
      <div class="field">
        <%= f.label :profile, class: "uk-label" %>
        <%= f.text_area :profile, class: "uk-textarea" %>
      </div>
      <div class="actions">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </fieldset>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
