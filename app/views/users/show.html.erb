<%= flash[:notice] %>
<div class="uk-container ">
	<div class="uk-grid uk-margin-large-top">
		<div class="uk-width-1-3" >
			<div class="uk-container style="z-index: 980;" uk-sticky="offset: 100; bottom: #offset">
					<%= render 'users/profile', user: @user %>
				</div>
				 </div>
						<div class="uk-width-2-3" >
							<% @posts.each do |post| %>
							<div class="uk-card uk-card-default uk-card-hover uk-margin-small uk-padding">
								<div class="uk-card-header ">
									<div class="uk-width-auto uk-text-lead">
										<%= attachment_image_tag post.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg",class: "icon" %>
										<%= link_to post.title,post, class: "post_#{post.id}" %>
										<span>	posted at <%= @post.created_at.strftime('%Y/%m/%d') %></span>
									</div>
									<div class="uk-card-badge uk-label">
											<%= @post.post_genre %>
									</div>
										<%= link_to (post) do %>
							<div class="uk-card-body uk-margin-small uk-text-lead">
								<br>
								<%= post.body %>
							</div>
							<% end %>
						</div>
						<p id="like_<%= post.id %>">
							<%= render 'posts/favorite', post: post %>
						</p>
						<% post.post_comments.count %>
						<p class="uk-text-bold">
							<%= post.post_comments.count %> comments
						</p>
					</div>
					<% end %>
				</div>
			</div>
		</div>




