<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= render 'users/profile', user: @user %>

		</div>
		<div class="col-xs-9">
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>

				<tbody>
					<% @posts.each do |post| %>
						<tr>
							<td>
								<%= link_to (post.user) do %>
								<%= attachment_image_tag post.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg" %>
								<% end %>
							</td>
   							<td>
								<%= link_to post.title,post, class: "post_#{post.id}" %>
								</td>
	     						<td><%= post.body %></td>
	     						<td id="like_<%= post.id %>">
						<%= render 'posts/favorite', post: post %></td>
			      				<td><% post.post_comments.count %>
					     		<%= post.post_comments.count %> comments
						    	</td>
						</tr>
					<% end %>
					</tbody>
				</table>
			</div>
		</div>

	</div>


