<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= render 'users/profile', user: @user %>

		</div>
		<div class="col-xs-9">
			<% @posts.each do |post| %>
			<div class="posts_show">
				<%= link_to (post.user) do %>
				<%= attachment_image_tag post.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg" %>
				<% end %>
				<%= link_to post.title,post, class: "post_#{post.id}" %>

				<%= post.body %>
				<p id="like_<%= post.id %>">
					<%= render 'posts/favorite', post: post %></p>
					<p><% post.post_comments.count %>
						<%= post.post_comments.count %> comments</p>
					</div>
					<% end %>

				</div>

			</div>
		</div>


