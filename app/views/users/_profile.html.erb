<div class="profile  uk-width-medium uk-align-center uk-text-center">
	<table class="uk-table">
		<tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg",class: "icon" %></tr>
		<p class="uk-text-large">
			<%= user.account_name %></p>
			<p>From :<%= user.nationality %></p>
			<% user.followings.count %>
			<th>
				<span class="uk-label uk-label-primaly">
					<%= user.followings.count %> 
					<%= link_to follows_user_path(user.id) do%>
					Follows
				</span>
			</th>
			<% end %>
			<% user.followers.count %>
			<th>
				<span class="uk-label uk-label-success">
					<%= user.followers.count %><%= link_to followers_user_path(user.id) do%> 
					Followers
				</span>
			</th>
			<% end %>
		</table>
		<div class="follow-count">
			<% if current_user != user %>
			<% if user.followed_by?(current_user) %>
			<span class="uk-label uk-label-warning"><%=link_to "Unfollow this user", user_relationships_path(user.id), method: :delete %></span>
			<% else %>
			<span class="uk-label uk-label-warning"><%=link_to "Follow this user", user_relationships_path(user.id), method: :book %></span>
			<% end %>
			<% end %>
		</div>
		<% if current_user == user %>
		<div class="edit-button uk-margin-small-top">
			<%= link_to 'edit',edit_user_path(user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
		</div>
		<% end %>
	</div>